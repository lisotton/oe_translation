{
    "name": "openeuropa/oe_translation",
    "description": "OpenEuropa Drupal module template.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "drupal/core": "^8.9 || ^9.1",
        "drupal/tmgmt": "1.11",
        "jakeasmith/http_build_url": "^1.0"
    },
    "require-dev": {
        "composer/installers": "^1.11",
        "cweagans/composer-patches": "^1.7",
        "drupal/address": "^1.9",
        "drupal/block_field": "^1.0@RC",
        "drupal/config_devel": "~1.2",
        "drupal/core-composer-scaffold": "^8.9 || ^9.1",
        "drupal/drupal-extension": "~4.0",
        "drupal/metatag": "^1.16",
        "drupal/paragraphs": "^1.11",
        "drupaltest/behat-traits": "dev-GH-6",
        "drush/drush": "^10.3",
        "ec-europa/oe-poetry-client": "dev-EWPP-917",
        "openeuropa/behat-transformation-context": "~0.1",
        "openeuropa/code-review": "~1.6",
        "openeuropa/drupal-core-require-dev": "^8.9 || ^9.1",
        "openeuropa/oe_multilingual": "dev-EWPP-917",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0",
        "phpspec/prophecy-phpunit": "^1 || ^2",
        "phpunit/phpunit": "^6.5 || ^7 || ^8 || ^9"
    },
    "_readme": [
        "We explicitly require consolidation/robo to allow lower 'composer update --prefer-lowest' to complete successfully.",
        "We explicitly require consolidation/annotated-command to allow lower 'composer update --prefer-lowest' to complete successfully.",
        "We use a high version of Zend Diactoros for the XMLResponse class"
    ],
    "conflict": {
        "openeuropa/oe_editorial": "<1.2.0"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "ec-europa/oe-poetry-client": {
            "type": "git",
            "url": "https://github.com/GilNovacomm/oe-poetry-client.git"
        },
        "openeuropa/oe_multilingual": {
            "type": "git",
            "url": "https://github.com/GilNovacomm/oe_multilingual.git"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_translation\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_translation\\": "./tests",
            "Drupal\\Tests\\oe_translation_poetry\\": "./modules/oe_translation_poetry/tests"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        },
        "patches": {
            "drupal/address": {
                "https://www.drupal.org/project/address/issues/3187662": "https://www.drupal.org/files/issues/2020-12-10/3187662-3.patch"
            },
            "drupal/tmgmt": {
                "https://www.drupal.org/project/tmgmt/issues/2942236": "https://www.drupal.org/files/issues/2020-12-03/2942236-5.patch"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "discard-changes": true
    }
}
